#include <iostream>
using namespace std;

int main() {
    int matrix1[4][4], matrix2[4][4], sum[4][4];

    cout << "Masukkan elemen untuk Matrix 1 (4x4):" << endl;
    for (int i = 0; i < 4; i++) {
        for (int j = 0; j < 4; j++) {
            cout << "Matrix1[" << i << "][" << j << "]: ";
            cin >> matrix1[i][j];
        }
    }

    cout << "Masukkan elemen untuk Matrix 2 (4x4):" << endl;
    for (int i = 0; i < 4; i++) {
        for (int j = 0; j < 4; j++) {
            cout << "Matrix2[" << i << "][" << j << "]: ";
            cin >> matrix2[i][j];
        }
    }

    for (int i = 0; i < 4; i++) {
        for (int j = 0; j < 4; j++) {
            sum[i][j] = matrix1[i][j] + matrix2[i][j];
        }
    }

    cout << "\nHasil penjumlahan Matrix 1 dan Matrix 2:" << endl;
    for (int i = 0; i < 4; i++) {
        for (int j = 0; j < 4; j++) {
            cout << sum[i][j] << "\t";
        }
        cout << endl;
    }

    return 0;
}
